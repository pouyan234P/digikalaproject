@model Digikala.Services.Identity.DTO.RegisterDTO
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <h2>Local Account Register</h2>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("Register", "Account"))
                {
                    @Html.HiddenFor(m => m.Url)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.family)
                        @Html.TextBoxFor(m => m.family, new { placeholder = "Family", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    </div>
                    <button class="btn btn-primary" type="submit">Register</button>
                }
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Login",new {Model.Url })">Login</a>
            </div>
        </div>
    </div>


</div>
</div>

